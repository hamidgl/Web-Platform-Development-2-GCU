<head>
      {{>header}}
</head>

<body>
      <div class="media-body text-center p-3">
            <h3 class="card-title">Glasgow Caledonian University</h3>
            <ul class="list-unstyled mb-0">
                  <li class="list-item">
                        <p class="card-text mb-2"> Student Exercise System</p>
                  </li>
                  <li class="list-item">
                        <p class="card-text mb-2">2020-2021</p>
                  </li>
                  <li class="list-item">
                        <p class="card-text mb-2">Glasgow</p>
                  </li>
                  <li class="list-item">
                        <p class="card-text mb-0"> 07767873645</p>
                  </li>
            </ul>
      </div>


      <div class="container">
            <h2 class="page-title">Contact Us</h2>
            <div style="background-color:#ec105a;">
                  <div class='col-sm-8'>
                  <form method="post" role="form">
                        <div class="form-group">
                              <label for="author">Username</label>
                              <input type="text" class="form-control" id="author" name="author" placeholder="Written by"
                                    value="{{author}}" required>
                        </div>

                        <div class="form-group">
                              <label for="email">E-mail</label>
                              <input type="email" class="form-control" id="email" name="email"
                                    placeholder="Enter your email" required>
                        </div>
                        <div class="form-group">
                              <label for="content">message</label>
                              <textarea class="form-control" id="content" name="content"
                                    placeholder="Enter your comments here." rows="3" required>{{content}}</textarea>

                        </div>
                        <input type="submit" value="Submit" class="btn btn-primary">

                  </form>
            </div>
      </div>
      </div>
</div>
</body>


</html>
